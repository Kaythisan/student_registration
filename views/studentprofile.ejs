<div class="justify-content-center col-lg-10" >
    <div class="form-group row ">
        <label for="studentname" class="col-5 studentlabel"> Name:</label>
        <input type="text" class=" col-6 studentfield form-control" id="name" value="<%= student?student.name:'' %>" placeholder="Enter Name">
    </div>
    <div class="form-group row">
        <label for="roll"  class="col-5 studentlabel">Roll_No:</label>
        <input type="text" class=" col-6 studentfield form-control" id="roll" value="<%= student?student.roll:'' %>" placeholder="Enter Roll_No">
        
    </div>
    <div class="form-group row">
        <label for="number"  class="col-5 studentlabel">Phone Number:</label>
        <input type="text" class=" col-6 studentfield form-control" id="phonenumber" value="<%= student?student.phonenumber:'' %>" placeholder="Enter Phone Number">
        
    </div>
    <div class="form-group row">
        <label for="father"  class="col-5 studentlabel">Father:</label>
        <input type="text" class=" col-6 studentfield form-control" id="father" value="<%= student?student.father:'' %>" placeholder="Enter Father">
        
    </div>
    
    <div class="form-group row">
        <label for="address"  class="col-5 studentlabel">Address:</label>
        <input type="text" class=" col-6 studentfield form-control" id="address" value="<%= student?student.address:'' %>" placeholder="Enter Address">
    </div>
    <div class="form-group row">
        <label for="gmail"  class="col-5 studentlabel">Gmail:</label>
        <input type="text" class=" col-6 studentfield form-control" id="gmail" value="<%= student?student.gmail:'' %>" placeholder="Enter Gmail">
        
    </div>
    <div class="form-group row">
        <label for="year"  class="col-5 studentlabel">Year:</label>
        <input type="text" class=" col-6 studentfield form-control" id="year" value="<%= student?student.year:'' %>" placeholder="Enter Year">
        
    </div>
    
    <div class="col offset-md-4">
        <button type="button" class=" btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="savestudentBtn">Save</button>
    </div>
   
</div>
